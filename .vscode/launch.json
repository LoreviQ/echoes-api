{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Express Server (TypeScript)",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/src/server.ts",
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "console": "integratedTerminal"
        }
    ]
}